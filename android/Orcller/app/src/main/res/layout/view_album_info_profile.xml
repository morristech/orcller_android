<?xml version="1.0" encoding="utf-8"?>
<pisces.psuikit.ext.PSLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp">
    <com.orcller.app.orcller.widget.UserPictureView
        android:id="@+id/userPictureView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/idTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_tab_profile_content"
                android:clickable="true"
                android:singleLine="true"
                android:textColorLink="@color/textcolor_dark_blue"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:textColor="@color/textcolor_pageprofile_date"
                android:textSize="12dp"/>

            <ImageView
                android:id="@+id/optionsIcon"
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:background="@drawable/background_ripple_lightgray"
                android:clickable="true"
                android:src="@drawable/icon_album_options"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>
</pisces.psuikit.ext.PSLinearLayout>
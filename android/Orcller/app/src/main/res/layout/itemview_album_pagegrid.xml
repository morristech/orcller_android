<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.orcller.app.orcller.widget.MediaThumbView
        android:id="@+id/mediaThumbView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/background_album_pagegrid_textview"
        android:textColor="@android:color/white"
        android:textSize="13dp"/>

    <ImageView
        android:id="@+id/defaultIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:src="@drawable/icon_page_default_white"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/selectionIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/itemview_imagepicker_selection_indicator"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/checkIcon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/icon_check" />
    </FrameLayout>
</FrameLayout>
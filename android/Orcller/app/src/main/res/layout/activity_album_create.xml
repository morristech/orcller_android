<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="2dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/LightGrayTheme.Toolbar"/>

    <FrameLayout
        android:id="@+id/spinnerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bordered_lightgray"
        android:visibility="gone">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:contextClickable="true"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <pisces.psuikit.ext.PSScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:visibility="gone">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:clipChildren="false">
                <pisces.psuikit.widget.ClearableEditText
                    android:id="@+id/titleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:cursorVisible="true"
                    android:ellipsize="end"
                    android:hint="@string/m_hint_album_title"
                    android:inputType="text"
                    android:nextFocusDown="@+id/descriptionEditText"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/textcolor_textview_hint"
                    android:textCursorDrawable="@drawable/cursor_member"
                    android:textSize="14dp"/>

                <com.orcller.app.orcller.widget.DescriptionInputView
                    android:id="@+id/descriptionInputView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/m_hint_album_description"/>

                <com.orcller.app.orcller.widget.AlbumFlipView
                    android:id="@+id/albumFlipView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:visibility="gone"/>

                <com.orcller.app.orcller.widget.AlbumGridView
                    android:id="@+id/albumGridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </pisces.psuikit.ext.PSScrollView>

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_itemview_comment_header"
            android:visibility="gone">
            <pisces.psuikit.widget.PSButton
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_ripple_lightgray"
                android:drawableLeft="@drawable/icon_plus"
                android:drawablePadding="2dp"
                android:text="@string/w_add"
                android:textColor="@drawable/textcolor_imagepicker_select_button"
                android:textStyle="bold"
                android:textSize="14dp"/>

            <pisces.psuikit.widget.PSButton
                android:id="@+id/orderButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_ripple_lightgray"
                android:drawableLeft="@drawable/icon_page_order"
                android:drawablePadding="2dp"
                android:text="@string/w_order"
                android:textColor="@drawable/textcolor_imagepicker_select_button"
                android:textStyle="bold"
                android:textSize="14dp"/>

            <pisces.psuikit.widget.PSButton
                android:id="@+id/defaultButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_ripple_lightgray"
                android:drawableLeft="@drawable/icon_page_default"
                android:drawablePadding="2dp"
                android:text="@string/w_default"
                android:textColor="@drawable/textcolor_imagepicker_select_button"
                android:textStyle="bold"
                android:textSize="14dp"/>

            <pisces.psuikit.widget.PSButton
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_ripple_lightgray"
                android:drawableLeft="@drawable/icon_page_delete"
                android:drawablePadding="2dp"
                android:text="@string/w_delete"
                android:textColor="@drawable/textcolor_imagepicker_select_button"
                android:textStyle="bold"
                android:textSize="14dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
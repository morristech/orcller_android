<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/PurpleToobarTheme.Toolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@android:color/white">
        <com.orcller.app.orcllermodules.ext.FBProfilePictureView
            android:id="@+id/profilePictureView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:is_cropped="true"
            app:borderWidth="1dp"

            app:cornerRadius="30dp" />

        <TextView
            android:id="@+id/extraTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textColor="@color/textcolor_dark_blue" />

        <com.orcller.app.orcllermodules.ext.ClearableEditText
            android:id="@+id/idEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:hint="User Name"
            android:inputType="textVisiblePassword|textNoSuggestions"
            android:nextFocusDown="@+id/pwEditText"
            android:textColor="@color/black"
            android:textColorHint="@color/textcolot_hint"
            android:textCursorDrawable="@drawable/member_cursor"
            android:textSize="14dp" />

        <View android:id="@+id/separator"
            android:background="@color/hairline"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="center_vertical" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.orcller.app.orcllermodules.ext.ClearableEditText
                android:id="@+id/pwEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/textcolot_hint"
                android:textCursorDrawable="@drawable/member_cursor"
                android:textSize="14dp" />

            <Button
                android:id="@+id/joinButton"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/button_blue_radius3dp"
                android:text="JOIN"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/descTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:linksClickable="true"
            android:text="@string/member_joininput_desc"
            android:textAlignment="center"
            android:textColor="#828282"
            android:textColorLink="#828282"
            android:textColorHint="@color/white"
            android:textSize="13dp" />
    </LinearLayout>
</LinearLayout>
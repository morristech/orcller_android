<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bordered_white">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/pageContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.orcller.app.orcller.widget.MediaScrollView
                    android:id="@+id/mediaScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/buttonContainer"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_gravity="bottom"
                    android:background="@color/background_album_pagegrid_textview"
                    android:visibility="gone">
                    <pisces.psuikit.widget.PSButton
                        android:id="@+id/heartButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:drawableLeft="@drawable/icon_page_heart"
                        android:drawablePadding="4dp"
                        android:textColor="@drawable/color_page_heart"
                        android:textSize="13dp" />

                    <pisces.psuikit.widget.PSButton
                        android:id="@+id/commentButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:drawableLeft="@drawable/icon_page_comment"
                        android:drawablePadding="4dp"
                        android:textColor="@drawable/color_page_comment"
                        android:textSize="13dp"/>
                </LinearLayout>
            </FrameLayout>

            <com.orcller.app.orcller.widget.PageProfileView
                android:id="@+id/pageProfileView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.orcller.app.orcller.widget.DescriptionInputView
                android:id="@+id/descriptionInputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/m_hint_papge_description"/>

            <com.orcller.app.orcller.widget.PageCommentListView
                android:id="@+id/commentListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_album_view"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <com.orcller.app.orcller.widget.ProfileHearderView
        android:id="@+id/profileHearderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:visibility="invisible"/>

    <com.orcller.app.orcller.widget.ProfileContentView
        android:id="@+id/profileContentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:visibility="invisible"/>
</LinearLayout>
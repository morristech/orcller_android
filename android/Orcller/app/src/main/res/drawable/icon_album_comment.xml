<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:state_pressed="true">
        <bitmap android:src="@drawable/icon_comment_blue"
            android:tint="@color/icon_comment_selected_pressed" />
    </item>
    <item android:state_selected="true" android:drawable="@drawable/icon_comment_blue"/>
    <item android:state_pressed="true">
        <bitmap android:src="@drawable/icon_comment_gray"
            android:tint="@android:color/black" />
    </item>
    <item android:drawable="@drawable/icon_comment_gray"/>
</selector>
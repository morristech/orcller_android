<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:actionBarTabBarStyle">@style/AppTheme.ActionBar.TabBar</item>
        <item name="android:actionBarTabStyle">@style/AppTheme.ActionBar.TabView</item>
        <item name="android:actionBarTabTextStyle">@style/AppTheme.ActionBar.TabText</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="LightGrayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/theme_lightgray_primary</item>
        <item name="colorAccent">@color/theme_lightgray_accent</item>
    </style>

    <style name="PurpleTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/theme_purple_primary</item>
        <item name="colorAccent">@color/theme_purple_accent</item>
    </style>

    <style name="AppTheme.ActionBar"
        parent="android:style/Widget.Holo.Light.ActionBar" >
        <item name="android:background">@color/theme_purple_primary</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Title</item>
        <!--<item name="android:homeAsUpIndicator">@android:drawable/btn_dropdown</item>-->

        <!-- Support library compatibility -->
        <item name="background">@color/theme_purple_primary</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.Title</item>
    </style>

    <style name="AppTheme.ActionBar.Title"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ActionBar.TabBar"
        parent="android:style/Widget.Holo.Light.ActionBar.TabBar" >
    </style>

    <style name="AppTheme.ActionBar.TabText"
        parent="android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ActionBar.TabView" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/background_main_tabbar</item>
    </style>

    <style name="BlackTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@color/theme_black_primary</item>
        <item name="colorControlNormal">@color/theme_black_primary</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="LightGrayTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@color/theme_lightgray_toolbar_text</item>
        <item name="colorControlNormal">@color/theme_lightgray_toolbar_control</item>
        <item name="titleTextColor">@color/theme_lightgray_toolbar_text</item>
    </style>

    <style name="PurpleTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>
</resources>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:actionBarTabBarStyle">@style/AppTheme.ActionBar.TabBar</item>
        <item name="android:actionBarTabStyle">@style/AppTheme.ActionBar.TabView</item>
        <item name="android:actionBarTabTextStyle">@style/AppTheme.ActionBar.TabText</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
    </style>

    <style name="PurpleToobarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/actionbar_purple</item>
        <item name="colorAccent">@color/actionbar_purple_light</item>
    </style>

    <style name="AppTheme.ActionBar"
        parent="android:style/Widget.Holo.Light.ActionBar" >
        <item name="android:background">@color/actionbar_purple</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Title</item>
        <!--<item name="android:homeAsUpIndicator">@android:drawable/btn_dropdown</item>-->

        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_purple</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.Title</item>
    </style>

    <style name="AppTheme.ActionBar.Title"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ActionBar.TabBar"
        parent="android:style/Widget.Holo.Light.ActionBar.TabBar" >
    </style>

    <style name="AppTheme.ActionBar.TabText"
        parent="android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ActionBar.TabView" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/main_tabbar_background</item>
    </style>

    <style name="PurpleToobarTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>
</resources>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/theme_black_accent</item>
        <item name="colorPrimary">@color/theme_black_primary</item>
        <item name="android:alertDialogTheme">@style/CommonAlertDialog</item>
    </style>
    <style name="BlackTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@drawable/textcolor_imagepicker_select_button</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@drawable/textcolor_imagepicker_select_button</item>
        <item name="android:actionMenuTextAppearance">@style/BlackTheme.Toolbar.MenuTextStyle</item>
    </style>
    <style name="BlackTheme.Toolbar.MenuTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LightGrayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@drawable/textcolor_imagepicker_select_button</item>
        <item name="colorAccent">@color/theme_lightgray_accent</item>
        <item name="colorPrimary">@color/theme_lightgray_primary</item>
        <item name="android:alertDialogTheme">@style/CommonAlertDialog</item>
    </style>
    <style name="LightGrayTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/theme_lightgray_toolbar_control</item>
        <item name="titleTextColor">@color/theme_lightgray_toolbar_text</item>
        <item name="actionMenuTextColor">@drawable/textcolor_imagepicker_select_button</item>
        <item name="android:actionMenuTextAppearance">@style/LightGrayTheme.Toolbar.MenuTextStyle</item>
    </style>
    <style name="LightGrayTheme.Toolbar.MenuTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PurpleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/theme_purple_accent</item>
        <item name="colorControlNormal">@color/theme_purple_control_normal</item>
        <item name="colorPrimary">@color/theme_purple_primary</item>
        <item name="colorPrimaryDark">@color/theme_purple_primary_dark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:alertDialogTheme">@style/CommonAlertDialog</item>
    </style>
    <style name="PurpleTheme.Toolbar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:actionMenuTextAppearance">@style/PurpleTheme.Toolbar.MenuTextStyle</item>
    </style>
    <style name="PurpleTheme.Toolbar.MenuTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="PurpleTheme.Toolbar.TitleTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="WhiteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/imagepicker_toolbar_button_title_selected_color</item>
        <item name="colorPrimary">@color/theme_white_primary</item>
        <item name="colorPrimaryDark">@color/theme_white_primary_dark</item>
        <item name="android:alertDialogTheme">@style/CommonAlertDialog</item>
    </style>
    <style name="WhiteTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@drawable/textcolor_imagepicker_select_button</item>
        <item name="titleTextColor">@color/theme_white_toolbar_text</item>
        <item name="actionMenuTextColor">@drawable/textcolor_imagepicker_select_button</item>
        <item name="android:actionMenuTextAppearance">@style/WhiteTheme.Toolbar.MenuTextStyle</item>
    </style>
    <style name="WhiteTheme.Toolbar.MenuTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CommonAlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/theme_lightgray_toolbar_control</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">15dp</item>
        <item name="android:minWidth">200dp</item>
    </style>
</resources>

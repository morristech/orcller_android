<resources>>
    <style name="ImagePickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/theme_imagepicker_accent</item>
        <item name="colorPrimary">@color/theme_imagepicker_primary</item>
        <item name="colorPrimaryDark">@color/theme_imagepicker_primary_dark</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ImagePickerTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@android:color/black</item>
        <item name="colorControlNormal">@drawable/textcolor_imagepicker_select_button</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="actionMenuTextColor">@drawable/textcolor_imagepicker_select_button</item>
        <item name="android:actionMenuTextAppearance">@style/ImagePickerTheme.Toolbar.MenuTextStyle</item>
    </style>

    <style name="ImagePickerTheme.Toolbar.MenuTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
